{
  "name": "repo-knowledge",
  "version": "0.1.0",
  "description": "Index codebases and provide hyper-efficient context to AI coding agents via MCP server + CLI",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": {
    "repo-knowledge": "dist/bin/repo-knowledge.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsx bin/repo-knowledge.ts",
    "start": "node dist/bin/repo-knowledge.js",
    "mcp": "node dist/bin/repo-knowledge.js serve",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@huggingface/transformers": "^3.4.0",
    "@lancedb/lancedb": "^0.14.0",
    "@modelcontextprotocol/sdk": "^1.12.0",
    "apache-arrow": "^18.1.0",
    "better-sqlite3": "^11.8.0",
    "chalk": "^5.4.0",
    "commander": "^13.1.0",
    "fast-glob": "^3.3.0",
    "ignore": "^7.0.0",
    "ora": "^8.2.0",
    "tree-sitter-wasms": "^0.1.13",
    "web-tree-sitter": "^0.24.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
